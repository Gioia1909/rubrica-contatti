<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="250.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="it.university.group9.rubricacontattigroup9.SelezionaContattiDaRubricaController">
    <stylesheets>
        <URL value="@/styles/selezionacontattidarubrica.css" />
    </stylesheets>
    <children>
        <VBox prefHeight="200" prefWidth="250.0" spacing="10" alignment="TOP_CENTER">
           <children>
               <TextField fx:id="searchBar" prefHeight="25.0" prefWidth="200.0" promptText="Cerca un contatto..." />
               <ListView fx:id="contactListView" prefHeight="150.0" prefWidth="240.0" />
               <HBox alignment="CENTER" spacing="10">
                  <children>
                      <Button fx:id="addButton" onAction="#handleAddContact" prefHeight="25.0" prefWidth="25.0">
                         <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                               <image>
                                  <Image url="@add.png" />
                               </image>
                            </ImageView>
                         </graphic>
                      </Button>
                      <Button fx:id="closeButton" onAction="#handleClosePopup" prefHeight="25.0" prefWidth="25.0">
                         <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                               <image>
                                  <Image url="@back.png" />
                               </image>
                            </ImageView>
                         </graphic>
                      </Button>
                  </children>
               </HBox>
           </children>
        </VBox>
    </children>
</AnchorPane>
